<!-- ===== HERO ===== -->
<div class="row mb-5">
    <div class="col-12">
        <div class="card bg-primary text-white border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <h1 class="display-4 fw-bold mb-3">Welcome to AuctionHub</h1>
                <p class="lead mb-4">Vietnam's Leading Online Auction Platform</p>

                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="/products" class="btn btn-light btn-lg">
                        <i class="bi bi-search"></i> Explore Auctions
                    </a>
                    <a href="/accounts/signup" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-person-plus"></i> Register Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ===== TOP 5 ENDING SOON ===== -->
<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-4">
            <i class="bi bi-clock-history text-danger"></i> Top 5 Auctions Ending Soon
        </h2>
    </div>
</div>

<div class="row mb-5">
    {{#each endingSoon}}
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm border-0">

            <!-- <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}" style="height: 200px; object-fit: cover;"> -->
            <img src="https://picsum.photos/400/300?random={{@index}}"
                 class="card-img-top"
                 alt="{{this.title}}"
                 style="height:200px;object-fit:cover;">

            <div class="card-body d-flex flex-column">
                <span class="badge bg-danger mb-2 align-self-start">Ending Soon</span>
                <h5 class="card-title">{{this.title}}</h5>

                <p class="small text-muted flex-grow-1">{{this.description}}</p>

                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <small>Current Bid:</small>
                        <strong class="text-success">{{this.currentBid}} VND</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <small>Ends:</small>
                        <small class="text-danger">
                            <i class="bi bi-clock"></i> {{this.endTime}}
                        </small>
                    </div>
                </div>

                <a href="/auctions/{{this.id}}" class="btn btn-outline-primary w-100">
                    <i class="bi bi-eye"></i> View Details
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>

