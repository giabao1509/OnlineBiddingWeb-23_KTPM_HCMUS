<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <h1 class="mb-3">
            <i class="bi bi-hammer"></i> Auction Sessions
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Auctions</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Filters & Search -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form method="GET" action="/products/search">
                    <div class="row g-3">
                        <div class="col-lg-4 col-md-6">
                            <label class="form-label">Search</label>
                            <input type="text" class="form-control" name="search" placeholder="Enter keywords..." value="{{query.search}}">
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <label class="form-label">Category</label>
                            <select class="form-select" name="category">
                                {{#each categories}}
                                    <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>{{this.cat_name}}</option>
                                    {{#each this.subCategories}}
                                    <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>&nbsp;&nbsp;{{this.cat_name}}</option>
                                    {{/each}}
                                {{/each}}
                            </select>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <label class="form-label">Sắp xếp</label>
                            <select name="sort" class="form-select">
                                {{#each sortOptions}}
                                    <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="col-lg-2 col-md-6">
                            <label class="form-label d-none d-md-block">&nbsp;</label>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Filter Tags -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex gap-2 flex-wrap">
            <span class="badge bg-light text-dark border">
                <i class="bi bi-funnel"></i> Filters:
            </span>
            <a href="/auctions?status=active" class="badge bg-success text-decoration-none">
                <i class="bi bi-play-circle"></i> Ongoing
            </a>
            <a href="/auctions?status=ending" class="badge bg-danger text-decoration-none">
                <i class="bi bi-clock"></i> Ending soon
            </a>
            <a href="/auctions?status=new" class="badge bg-primary text-decoration-none">
                <i class="bi bi-star"></i> Newly listed
            </a>
            <a href="/auctions?featured=true" class="badge bg-warning text-dark text-decoration-none">
                <i class="bi bi-fire"></i> Featured
            </a>
        </div>
    </div>
</div>

<!-- Results Count -->
<div class="row mb-3">
    <div class="col-12">
        <p class="text-muted">
            Found <strong>{{totalResults}}</strong> results
        </p>
    </div>
</div>

<!-- Auction Items -->
<div class="row">
    {{#each products}}
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm border-0 position-relative">
            {{#if this.featured}}
            <span class="badge bg-warning position-absolute top-0 start-0 m-2">
                <i class="bi bi-star-fill"></i> Featured
            </span>
            {{/if}}
            <img src="{{this.thumbnail.image_url}}" class="card-img-top" alt="{{this.name}}" style="height: 220px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text text-muted small flex-grow-1">{{this.description}}</p>

                <div class="mb-2">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <small class="text-muted">Starting price:</small>
                        <span class="text-muted ">{{this.starting_price}} VND</span>
                    </div>
                </div>

                <div class="alert alert-danger py-2 px-3 mb-3" role="alert">
                    <small>
                        <i class="bi bi-clock"></i> Ends: <strong>{{this.end_time}}</strong>
                    </small>
                </div>

                <div class="d-grid gap-2">
                    <a href="/products/detail/{{this.auction_id}}" class="btn btn-primary">
                        <i class="bi bi-eye"></i> View details
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>


{{#if query}}
<div class="row mt-4">
  <div class="col-12">
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">

        <!-- Prev -->
        <li class="page-item {{#if isFirstPage}}disabled{{/if}}">
          <a class="page-link" href="/products/search?page={{prevPage}}&search={{query.search}}&category={{query.category}}&sort={{query.sort}}">
            <i class="bi bi-chevron-left"></i> Prev
          </a>
        </li>

        <!-- Pages -->
        {{#each pages}}
        <li class="page-item {{#if this.active}}active{{/if}}">
          <a class="page-link" href="/products/search?page={{this.number}}&search={{../query.search}}&category={{../query.category}}&sort={{../query.sort}}">
            {{this.number}}
          </a>
        </li>
        {{/each}}

        <!-- Next -->
        <li class="page-item {{#if isLastPage}}disabled{{/if}}">
          <a class="page-link" href="/products/search?page={{nextPage}}&search={{query.search}}&category={{query.category}}&sort={{query.sort}}">
            Next <i class="bi bi-chevron-right"></i>
          </a>
        </li>

      </ul>
    </nav>
  </div>
</div>
{{else}}
<div class="row mt-4">
    <div class="col-12">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item {{#if isFirstPage}}disabled{{/if}}">
                    <a class="page-link" href="/products?page={{prevPage}}">
                        <i class="bi bi-chevron-left"></i> Trước
                    </a>
                </li>
                {{#each pages}}
                <li class="page-item {{#if this.active}}active{{/if}}">
                    <a class="page-link" href="/products?page={{this.number}}">{{this.number}}</a>
                </li>
                {{/each}}
                <li class="page-item {{#if isLastPage}}disabled{{/if}}">
                    <a class="page-link" href="/products?page={{nextPage}}">
                        Sau <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
{{/if}}