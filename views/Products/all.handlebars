</div>


{{#if query.search}}
<div class="row mt-4">
  <div class="col-12">
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">

        <!-- Prev -->
        <li class="page-item {{#if isFirstPage}}disabled{{/if}}">
          <a class="page-link" href="/products/search?page={{prevPage}}{{#if query.search}}&search={{query.search}}{{/if}}{{#if query.category}}&category={{query.category}}{{/if}}{{#if query.sort}}&sort={{query.sort}}{{/if}}">
            <i class="bi bi-chevron-left"></i> Trước
          </a>
        </li>

        <!-- Pages -->
        {{#each pages}}
        <li class="page-item {{#if this.active}}active{{/if}}">
          <a class="page-link" href="/products/search?page={{this.number}}{{#if ../query.search}}&search={{../query.search}}{{/if}}{{#if ../query.category}}&category={{../query.category}}{{/if}}{{#if ../query.sort}}&sort={{../query.sort}}{{/if}}">
            {{this.number}}
          </a>
        </li>
        {{/each}}

        <!-- Next -->
        <li class="page-item {{#if isLastPage}}disabled{{/if}}">
          <a class="page-link" href="/products/search?page={{nextPage}}{{#if query.search}}&search={{query.search}}{{/if}}{{#if query.category}}&category={{query.category}}{{/if}}{{#if query.sort}}&sort={{query.sort}}{{/if}}">
            Sau <i class="bi bi-chevron-right"></i>
          </a>
        </li>

      </ul>
    </nav>
  </div>
</div>

{{else}}
<div class="row mt-4">
    <div class="col-12">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item {{#if isFirstPage}}disabled{{/if}}">
                    <a class="page-link" href="/products?page={{prevPage}}">
                        <i class="bi bi-chevron-left"></i> Trước
                    </a>
                </li>
                {{#each pages}}
                <li class="page-item {{#if this.active}}active{{/if}}">
                    <a class="page-link" href="/products?page={{this.number}}">{{this.number}}</a>
                </li>
                {{/each}}
                <li class="page-item {{#if isLastPage}}disabled{{/if}}">
                    <a class="page-link" href="/products?page={{nextPage}}">
                        Sau <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
{{/if}}