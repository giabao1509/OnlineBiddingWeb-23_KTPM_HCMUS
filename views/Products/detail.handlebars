<!-- Breadcrumb -->
<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/auctions">Đấu giá</a></li>
                <li class="breadcrumb-item"><a href="/products/search?category={{product.category_id}}">{{product.cat_name}}</a></li>
                <li class="breadcrumb-item active">{{product.name}}</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <!-- Left Column - Images -->
    <div class="col-lg-7 mb-4">
    <!-- Carousel lớn -->
    <div id="auctionCarousel" class="carousel slide mb-2" data-bs-ride="carousel">
        <div class="carousel-inner">
            {{#if product.images}}
                {{#each product.images}}
                <div class="carousel-item {{#if this.is_thumbnail}}active{{/if}}">
                    <img src="{{this.image_url}}" class="d-block w-100 rounded" alt="{{../auction.title}}" style="max-height: 500px; object-fit: contain;">
                </div>
                {{/each}}
            {{else}}
                <div class="carousel-item active">
                    <img src="https://picsum.photos/600/400?random=1" class="d-block w-100 rounded" alt="Placeholder" style="max-height: 500px; object-fit: contain;">
                </div>
            {{/if}}
        </div>
    </div>

    <!-- Thumbnails -->
    <div class="d-flex gap-2 overflow-auto" id="carousel-thumbs">
        {{#if product.images}}
            {{#each product.images}}
            <img src="{{this.image_url}}" 
                 class="img-thumbnail thumb-img {{#if this.is_thumbnail}}border-primary border-2{{/if}}" 
                 style="width: 100px; height: 100px; object-fit: cover; cursor: pointer;"
                 data-bs-target="#auctionCarousel" 
                 data-bs-slide-to="{{@index}}">
            {{/each}}
        {{else}}
            <img src="https://picsum.photos/100/100?random=1" 
                 class="img-thumbnail border-primary border-2" 
                 style="width: 100px; height: 100px; object-fit: cover; cursor: pointer;"
                 data-bs-target="#auctionCarousel" 
                 data-bs-slide-to="0">
        {{/if}}
    </div>
    </div>


    <!-- Right Column - Auction Info -->
    <div class="col-lg-5">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <span class="badge bg-primary">{{product.cat_name}}</span>
                </div>

                <h1 class="h3 mb-3">{{product.name}}</h1>

                <!-- Seller Info -->
                <div class="d-flex align-items-center p-3 bg-white shadow-sm rounded-3 mb-4">
                    <!-- Avatar giả -->
                    <div class="me-3">
                        <img src="https://i.pravatar.cc/100?u={{product.seller_email}}" 
                            alt="Avatar"
                            class="rounded-circle border"
                            style="width: 60px; height: 60px; object-fit: cover;">
                    </div>

                    <!-- Thông tin người bán -->
                    <div class="flex-grow-1">
                        <h5 class="mb-1 fw-semibold">{{product.seller_name}}</h5>

                        <div class="text-muted small d-flex align-items-center gap-1">
                            <i class="bi bi-star-fill text-warning"></i> 
                            <span class="fw-semibold">5.0</span> 
                            <span>({{auction.seller.reviews}} đánh giá)</span>
                        </div>

                        <div class="text-dark fw-medium" style="font-size: 0.95rem;">
                            <i class="bi bi-envelope"></i> {{product.seller_email}}
                        </div>
                    </div>
                </div>

                <!-- Countdown Timer -->
                <div class="alert alert-danger mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-clock-history"></i> Kết thúc sau:</span>
                        <strong class="fs-5">{{product.time_remaining}}</strong>
                    </div>
                </div>

                <!-- Price Info -->
                <div class="card bg-light border-0 mb-3">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted d-block">Giá khởi điểm</small>
                                <span class="text-decoration-line-through">{{product.starting_price}} VNĐ</span>
                            </div>
                            <div class="col-6 text-end">
                                <small class="text-muted d-block">Bước giá</small>
                                <span class="text-primary fw-bold">{{product.bid_step}} VNĐ</span>
                            </div>
                        </div>
                        <hr>
                        <div class="text-center mb-2">
                            <small class="text-muted d-block">Giá hiện tại</small>
                            <h2 class="text-success mb-0">{{product.current_bid}} VNĐ</h2>
                        </div>
                        <!---
                        <div class="text-center"> 
                            <span class="badge bg-info">{{auction.bidCount}} lượt đặt giá</span>
                        </div>
                        --->
                    </div>
                </div>

                <!-- Bid Form -->
                {{#if user}}
                <form action="/auctions/{{auction.id}}/bid" method="POST" class="mb-3">
                    <div class="input-group input-group-lg mb-3">
                        <input type="number" class="form-control" name="bidAmount" 
                               placeholder="Nhập giá của bạn" 
                               min="{{auction.minNextBid}}" 
                               step="{{auction.bidStep}}"
                               required>
                        <span class="input-group-text">VNĐ</span>
                    </div>
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-hammer"></i> Đặt giá
                        </button>
                        <button type="button" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-lightning-fill"></i> Đặt giá nhanh: {{auction.quickBid}} VNĐ
                        </button>
                    </div>
                </form>
                {{else}}
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-exclamation-triangle"></i> 
                    <a href="/login" class="alert-link">Đăng nhập</a> để tham gia đấu giá
                </div>
                {{/if}}

                <!-- Action Buttons -->
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-danger">
                        <i class="bi bi-heart"></i> Thêm vào yêu thích
                    </button>
                    <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#shareModal">
                        <i class="bi bi-share"></i> Chia sẻ
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabs Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <ul class="nav nav-tabs card-header-tabs" role="tablist">
                    <li class="nav-item">
