{{#section 'js'}}
<script>
    document.addEventListener('DOMContentLoaded', function () {

    const carousel = document.querySelector('#auctionCarousel');
    const thumbs = document.querySelectorAll('#carousel-thumbs .thumb-img');

    if (!carousel || !thumbs.length) return;

    function setActiveThumb(index) {
        thumbs.forEach((t, i) => {
            t.classList.toggle('border-primary', i === index);
            t.classList.toggle('border-2', i === index);
        });
    }

    carousel.addEventListener('slide.bs.carousel', e => {
        setActiveThumb(e.to);
    });

    thumbs.forEach((thumb, index) => {
        thumb.addEventListener('click', () => setActiveThumb(index));
    });

    setActiveThumb(0);
});
</script>



<script>
document.addEventListener('DOMContentLoaded', function () {

    document.querySelectorAll('.reply-btn').forEach(btn => {
        btn.addEventListener('click', function () {

            // Tìm form reply ngay sau nút
            const form = this.nextElementSibling;

            if (!form || !form.classList.contains('reply-form')) return;

            // Toggle form
            form.classList.toggle('d-none');
        });
    });

});
</script>

