<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <h3 class="mb-0">
            <i class="bi bi-box-seam text-primary me-2"></i>Quản lý sản phẩm
        </h3>
        <p class="text-muted">Theo dõi và quản lý các sản phẩm đấu giá của bạn</p>
    </div>
</div>

<!-- Tabs Navigation -->
<ul class="nav nav-tabs mb-4" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#active-products">
            <i class="bi bi-hourglass-split"></i> Đang diễn ra ({{stats.active}})
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#completed-products">
            <i class="bi bi-check-circle"></i> Đã kết thúc ({{stats.completed}})
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#pending-review">
            <i class="bi bi-star"></i> Chờ đánh giá
            {{#if stats.pendingReview}}
            <span class="badge bg-warning">{{stats.pendingReview}}</span>
            {{/if}}
        </a>
    </li>
</ul>

<div class="tab-content">
    <!-- Active Products Tab -->
    <div class="tab-pane fade show active" id="active-products">
        <div class="row">
            {{#each activeProducts}}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="position-relative">
                        <img src="{{this.image}}" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <span class="badge bg-success position-absolute top-0 end-0 m-2">
                            Đang đấu giá
                        </span>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">{{this.title}}</h6>
                        <div class="mb-2">
                            <small class="text-muted">Giá khởi điểm:</small>
                            <div class="fw-bold">{{this.startPrice}} VNĐ</div>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Giá hiện tại:</small>
                            <div class="fw-bold text-success fs-5">{{this.currentBid}} VNĐ</div>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <small class="text-muted">
                                <i class="bi bi-eye"></i> {{this.views}} lượt xem
                            </small>
                            <small class="text-muted">
                                <i class="bi bi-hammer"></i> {{this.bidCount}} lượt đặt
                            </small>
                        </div>
                        <div class="alert alert-danger py-2 px-3 mb-3">
                            <small>
                                <i class="bi bi-clock"></i> Kết thúc: <strong>{{this.timeRemaining}}</strong>
                            </small>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="btn-group w-100">
                            <a href="/seller/products/{{this.id}}" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Chi tiết
                            </a>
                            <button class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#addDescModal{{this.id}}">
                                <i class="bi bi-plus-circle"></i> Bổ sung
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Add Description Modal -->
                <div class="modal fade" id="addDescModal{{this.id}}" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Bổ sung mô tả - {{this.title}}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <form action="/seller/products/{{this.id}}/append-description" method="POST">
                                <div class="modal-body">
                                    <div class="alert alert-info py-2 px-3 mb-3">
                                        <i class="bi bi-info-circle"></i>
                                        <small>Nội dung mới sẽ được thêm vào cuối mô tả hiện tại</small>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Mô tả bổ sung</label>
                                        <textarea class="form-control" name="additionalDescription" rows="8" 
                                                  placeholder="Nhập thông tin bổ sung..." required></textarea>
                                    </div>

                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <small class="text-muted d-block mb-1"><strong>Ví dụ định dạng:</strong></small>
                                            <small class="text-muted">
✏️ {{currentDate}} - Thông tin cập nhật mới nhất về sản phẩm...
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-plus-circle"></i> Thêm mô tả
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted mb-3"></i>
                    <p class="text-muted">Bạn chưa có sản phẩm đang đấu giá</p>
                    <a href="/seller/products/create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Đăng sản phẩm mới
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Completed Products Tab -->
    <div class="tab-pane fade" id="completed-products">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Người thắng</th>
                                <th>Giá bán</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each completedProducts}}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="{{this.image}}" class="rounded me-2" style="width: 60px; height: 60px; object-fit: cover;">
                                        <div>
                                            <div class="fw-bold">{{this.title}}</div>
                                            <small class="text-muted">Kết thúc: {{this.endDate}}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="{{this.winner.avatar}}" class="rounded-circle me-2" style="width: 35px; height: 35px;">
                                        <div>
                                            <div>{{this.winner.name}}</div>
                                            <small class="text-muted">
                                                <i class="bi bi-star-fill text-warning"></i> {{this.winner.rating}}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <strong class="text-success">{{this.finalPrice}} VNĐ</strong>
                                </td>
                                <td>
                                    {{#if this.isCompleted}}
                                    <span class="badge bg-success">Hoàn thành</span>
                                    {{else if this.isPaid}}
                                    <span class="badge bg-info">Đã thanh toán</span>
                                    {{else}}
                                    <span class="badge bg-warning">Chờ thanh toán</span>
                                    {{/if}}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/seller/products/{{this.id}}" class="btn btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        {{#unless this.isRated}}
                                        <button class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#rateModal{{this.id}}">
                                            <i class="bi bi-star"></i> Đánh giá
                                        </button>
                                        {{/unless}}
                                        {{#unless this.isCompleted}}
                                        <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal{{this.id}}">
                                            <i class="bi bi-x-circle"></i> Hủy
                                        </button>
                                        {{/unless}}
                                    </div>
                                </td>
                            </tr>

                            <!-- Rate Modal -->
                            <div class="modal fade" id="rateModal{{this.id}}" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-warning">
                                            <h5 class="modal-title">
                                                <i class="bi bi-star"></i> Đánh giá người mua
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form action="/seller/products/{{this.id}}/rate-buyer" method="POST">
                                            <div class="modal-body">
                                                <div class="text-center mb-3">
                                                    <img src="{{this.winner.avatar}}" class="rounded-circle mb-2" style="width: 80px; height: 80px;">
                                                    <h6>{{this.winner.name}}</h6>
                                                </div>

                                                <div class="mb-3 text-center">
                                                    <label class="form-label fw-bold d-block">Đánh giá</label>
                                                    <div class="btn-group" role="group">
                                                        <input type="radio" class="btn-check" name="rating" id="positive{{this.id}}" value="1" required>
                                                        <label class="btn btn-outline-success" for="positive{{this.id}}">
                                                            <i class="bi bi-hand-thumbs-up"></i> Tích cực (+1)
                                                        </label>
                                                        
                                                        <input type="radio" class="btn-check" name="rating" id="negative{{this.id}}" value="-1">
                                                        <label class="btn btn-outline-danger" for="negative{{this.id}}">
                                                            <i class="bi bi-hand-thumbs-down"></i> Tiêu cực (-1)
                                                        </label>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Nhận xét</label>
                                                    <textarea class="form-control" name="comment" rows="4" 
                                                              placeholder="Chia sẻ trải nghiệm của bạn với người mua..." required></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                <button type="submit" class="btn btn-warning">
                                                    <i class="bi bi-star"></i> Gửi đánh giá
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Cancel Transaction Modal -->
                            <div class="modal fade" id="cancelModal{{this.id}}" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">
                                                <i class="bi bi-exclamation-triangle"></i> Hủy giao dịch
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form action="/seller/products/{{this.id}}/cancel-transaction" method="POST">
                                            <div class="modal-body">
                                                <div class="alert alert-warning">
                                                    <i class="bi bi-exclamation-triangle"></i>
                                                    <strong>Lưu ý:</strong> Hành động này sẽ:
                                                    <ul class="mb-0 mt-2">
                                                        <li>Hủy giao dịch với người mua</li>
                                                        <li>Tự động đánh giá tiêu cực (-1) cho người mua</li>
                                                        <li>Không thể hoàn tác</li>
                                                    </ul>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Lý do hủy</label>
                                                    <select class="form-select" name="reason" required>
                                                        <option value="">-- Chọn lý do --</option>
                                                        <option value="no-payment">Người thắng không thanh toán</option>
                                                        <option value="no-contact">Không liên lạc được</option>
                                                        <option value="buyer-cancel">Người mua hủy đơn</option>
                                                        <option value="other">Lý do khác</option>
                                                    </select>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Ghi chú bổ sung</label>
                                                    <textarea class="form-control" name="note" rows="3"></textarea>
                                                </div>

                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="confirm" required>
                                                    <label class="form-check-label">
                                                        Tôi xác nhận muốn hủy giao dịch này
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="bi bi-x-circle"></i> Xác nhận hủy
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            {{else}}
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    Chưa có sản phẩm nào kết thúc
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Review Tab -->
    <div class="tab-pane fade" id="pending-review">
        <div class="row">
            {{#each pendingReviews}}
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <img src="{{this.product.image}}" class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;">
                            <div class="flex-grow-1">
                                <h6 class="mb-1">{{this.product.title}}</h6>
                                <small class="text-muted">Kết thúc: {{this.endDate}}</small>
                                <div class="mt-1">
                                    <span class="badge bg-success">{{this.finalPrice}} VNĐ</span>
                                </div>
                            </div>
                        </div>

                        <div class="border-top pt-3 mb-3">
                            <div class="d-flex align-items-center">
                                <img src="{{this.winner.avatar}}" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                                <div>
                                    <strong>{{this.winner.name}}</strong>
                                    <div>
                                        <small class="text-muted">
                                            <i class="bi bi-star-fill text-warning"></i> {{this.winner.rating}}
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-warning w-100" data-bs-toggle="modal" data-bs-target="#quickRateModal{{this.id}}">
                            <i class="bi bi-star"></i> Đánh giá ngay
                        </button>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-12">
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-check-circle fs-1 mb-3"></i>
                    <p>Không có giao dịch chờ đánh giá</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>