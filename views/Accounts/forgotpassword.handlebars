{{#section "css"}}
<style>
.h-custom {
  height: calc(100% - 73px);
}
@media (max-width: 450px) {
  .h-custom {
    height: 100%;
  }
}
</style>
{{/section}}

{{#section "js"}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.querySelector('#formForgot').addEventListener('submit', function(e) {
    const email = document.querySelector('#email').value.trim();
    if (!email) {
        e.preventDefault();
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Please enter your email address.'
        });
    }
});
</script>

<script>
  {{#if error}}
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: "{{{error}}}"
    });
  {{/if}}

  {{#if success}}
    Swal.fire({
      icon: 'success',
      title: 'Success',
      text: "{{{success}}}"
    });
  {{/if}}
</script>
{{/section}}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-key text-warning" style="font-size: 3rem;"></i>
                    <h2 class="mt-3">Forgot Password?</h2>
                    <p class="text-muted">Enter your email to receive a password reset link.</p>
                </div>

                <form method="POST" id="formForgot">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email" 
                                   placeholder="email@example.com" required>
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-send"></i> Send OTP 
                        </button>
                    </div>

                    <div class="text-center">
                        <a href="/accounts/signin" class="text-decoration-none">
                            <i class="bi bi-arrow-left"></i> Back to Login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
