{{#section "css"}}
<style>
.h-custom {
  height: calc(100% - 73px);
}
@media (max-width: 450px) {
  .h-custom {
    height: 100%;
  }
}

.otp-box {
  letter-spacing: 10px;
  text-align: center;
  font-size: 28px;
}

</style>
{{/section}}

{{#section "js"}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.querySelector('#formOTP').addEventListener('submit', function(e) {
    const otp = document.querySelector('#otp').value.trim();
    if (!otp) {
        e.preventDefault();
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Please enter your OTP code.'
        });
    }
});
</script>

<script>
  {{#if error}}
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: "{{{error}}}"
    });
  {{/if}}

  {{#if success}}
    Swal.fire({
      icon: 'success',
      title: 'Success',
      text: "{{{success}}}"
    });
  {{/if}}
</script>
{{/section}}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5">

                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock text-primary" style="font-size: 3rem;"></i>
                    <h2 class="mt-3">OTP Verification</h2>
                    <p class="text-muted">Enter the 6-digit code sent to your email</p>
                </div>

                <form method="post" id="formOTP">

                    <div class="mb-3">
                        <label for="otp" class="form-label">OTP Code</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input type="text" maxlength="6" id="otp" name="otp"
                                   class="form-control form-control-lg otp-box"
                                   placeholder="______">
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check2-circle"></i> Verify OTP
                        </button>
                    </div>

                    <div class="text-center mt-2">
                        <a href="/accounts/forgotpassword" class="text-decoration-none">
                            <i class="bi bi-arrow-left"></i> Back to Forgot Password
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
