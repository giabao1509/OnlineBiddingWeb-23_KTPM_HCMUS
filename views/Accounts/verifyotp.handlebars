{{#section "css"}}
<style>
.h-custom {
  height: calc(100% - 73px);
}
@media (max-width: 450px) {
  .h-custom {
    height: 100%;
  }
}
.otp-input {
  letter-spacing: 8px;
  text-align: center;
  font-size: 28px;
}
</style>
{{/section}}

{{#section "js"}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.querySelector('#formOTP').addEventListener('submit', function(e) {
    const otp = document.querySelector('#otp').value.trim();
    if (!otp) {
        e.preventDefault();
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Please enter your OTP.'
        });
    }
});
</script>

<script>
  {{#if error}}
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: "{{{error}}}"
    });
  {{/if}}

  {{#if success}}
    Swal.fire({
      icon: 'success',
      title: 'Success',
      text: "{{{success}}}"
    });
  {{/if}}
</script>

{{/section}}

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">

      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://cdn-icons-png.flaticon.com/512/2913/2913465.png"
             class="img-fluid" alt="OTP Image">
      </div>

      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

        <form method="post" id="formOTP">

            <h3 class="mb-4">Verify OTP</h3>

            <p class="text-muted">Enter the 6-digit OTP sent to your email.</p>

            <div class="form-outline mb-4">
            <label class="form-label" for="otp">OTP Code</label>
            <input type="text" maxlength="6" id="otp" name="otp"
                    class="form-control form-control-lg otp-input" />
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block">
            Verify OTP
            </button>
        </form>

      </div>
    </div>
  </div>
</section>
